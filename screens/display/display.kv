#:kivy 2.0.0

<Display>:
    name: 'display'

    MDGridLayout:
        id: layout
        cols: 1
        md_bg_color: app.theme_cls.bg_normal

        MDLabel:
            size_hint_y: None
            text: "View Data"
            halign: "center"
            font_style: "H4"
            height: self.texture_size[1]
            padding: 0, dp(10)

        AnchorLayout:
            size_hint_y: None
            height: controls_container.height + self.padding[1] + self.padding[3]
            orientation: "horizontal"
            padding: dp(20), 0

            MDCard:
                id: controls_container
                md_bg_color: app.theme_cls.bg_dark
                background_hue: "200"
                size_hint_y: None
                height: controls.height + self.padding[1] + self.padding[3]
                size_hint_max_x: 1074
                elevation: 1
                padding: dp(10)

                MDFloatingActionButton:
                    icon: "pencil"
                    elevation: 1
                    pos_hint: {'center_y': 0.5}
                    on_release: root._on_edit_button_pressed()

                MDAnchorLayout:
                    size_hint_y: None
                    height: controls.height

                    MDGridLayout:
                        id: controls
                        rows: 1
                        adaptive_width: True
                        size_hint_y: None
                        height: max(id_name_field.height, show_btn.height)
                        spacing: dp(20)

                        AnchorLayout:
                            size_hint_x: None
                            width: id_name_field.width

                            MDTextField:
                                id: id_name_field
                                hint_text: "ID / Name"
                                size_hint: None, None
                                width: dp(269)

                        AnchorLayout:
                            size_hint_x: None
                            width: class_field.width

                            MDTextField:
                                id: class_field
                                hint_text: "Class"
                                size_hint: None, None
                                width: dp(80)

                        AnchorLayout:
                            size_hint_x: None
                            width: num_results.width

                            MDDropDownItem:
                                id: num_results
                                text: "05 Rows"
                                size_hint: None, None
                                width: dp(80)
                                on_release: root.menu.open()

                        AnchorLayout:
                            size_hint_x: None
                            width: show_btn.width

                            MDRaisedButton:
                                id: show_btn
                                text: "Show"
                                elevation: 1
                                on_release: root._on_show_button_pressed()

                MDFloatingActionButton:
                    icon: "delete-forever"
                    elevation: 1
                    pos_hint: {'center_y': 0.5}
                    md_bg_color: "#ea9291"
                    on_release: root._on_delete_button_pressed()

        AnchorLayout:
            id: datatable_wrapper
            padding: dp(20)
