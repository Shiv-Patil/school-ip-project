#:kivy 2.0.0

<AnalysisContent>:
    orientation: "vertical"
    size_hint: None, None
    size: dp(400), dp(269)
    padding: dp(10)

    MDLabel:
        text: "Analysis"
        font_style: "H6"
        halign: "center"
        size_hint_y: None
        height: self.texture_size[1]
        padding: 0, dp(10)

    AnchorLayout:

        BoundedNumericTextField:
            id: id_field
            hint_text: "Student ID"
            width: dp(169//2)
            bound: 69420

    AnchorLayout:
        id: root_button_box
        size_hint_y: None
        height: button_box.height
        anchor_x: "right"

        MDBoxLayout:
            id: button_box
            orientation: 'horizontal'
            adaptive_size: True
            spacing: dp(10)

            MDFlatButton:
                text: "Cancel"
                on_release:
                    root.parent.parent.dismiss()

            MDRaisedButton:
                id: edit_button
                text: "Proceed"
                disabled: not id_field.text
                elevation: 1
                on_release:
                    root._on_proceed_button_clicked()
